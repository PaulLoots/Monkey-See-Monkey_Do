{% extends "base.html.twig" %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="assets/css/styles_2.css">{% endblock %}

{% block bodyStyling %}style="background-color: #2d3436;background-image:
url(&quot;../assets/img/monkey_pattern.svg&quot;);background-size: 70px;"{% endblock %}

{% block navigation %}{% endblock %}
{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-lg-6 col-xl-8 d-lg-block infoBlock" style="height: 100vh;">
            <div class="row d-none d-lg-block" style="padding-top: 15vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-8 col-xl-4 mx-auto colorShift" style="padding: 0px;">
                    <h4 class="text-center" style="font-family: Quicksand, sans-serif;font-size: 20px;max-height: 265px;">There are two monkeys on a tree and one jumps off.&nbsp; Why does the other monkey jump too?</h4>
                </div>
            </div>
            <div class="row d-none d-lg-block" style="margin-top: 15vh;">
                <div class="col" style="text-align: center;margin-bottom: 20vh;"><img src="../assets/img/logoFull.png" style="height: 110px;"></div>
            </div>
            <div class="row">
                    <div class="col-12 col-sm-8 col-md-6 col-lg-8 col-xl-4 offset-sm-2 offset-md-3 offset-lg-2 offset-xl-4" style="margin-bottom: 30px;padding-right: 0;padding-left: 0;">
                        <div class="riddleStateCard colorShiftB collapseContentBlock" style="padding-bottom: 15px;margin-top: 20px;transition: 0.3s;padding-left: 15px;padding-right: 15px;"><a class="btn btn-outline-link btn-block btn-sm thumbsHover collapsebutton" data-toggle="collapse" aria-expanded="false" aria-controls="collapse-1" role="button" href="#collapse-1" id="collapseToBottom" style="color: rgb(254,254,254);font-family: Roboto, sans-serif;font-weight: 300;font-size: 20px;height: 40px;padding-top: 12px;">Create Account<i class="la la-chevron-circle-down" style="color: rgb(255,255,255);font-size: 20px;margin-left: 5px;"></i></a>
                            <div class="collapse collapseContentBlock" id="collapse-1">
                                <div class="row">
                                    <div class="col d-block d-lg-none">
                                        <h2 style="font-family: Quicksand, sans-serif;text-align: center;color: rgb(255,255,255);font-weight: 500;">Create Account</h2>
                                    </div>
                                </div>
                                {{ form_start(SignUpform, {'attr': {'name':'CreateAccountForm'}}) }}

                                    <div class="form-group inputRoundedBlock" style="height: 50px;">
                                        <i class="la la-user float-left" style="margin-left: 5%;margin-top: 13px;font-size: 20px;"></i>
                                        {{ form_widget(SignUpform.name, {'attr': {'class':'form-control', 'placeholder':'Name', 'style':'height: 50px;width: 84%;border: none;'}}) }}
                                    </div>
                                    <div class="form-group inputRoundedBlock" style="height: 50px;">
                                        <i class="la la-envelope float-left" style="margin-left: 5%;margin-top: 13px;font-size: 20px;"></i>
                                        {{ form_widget(SignUpform.email, {'attr': {'class':'form-control', 'placeholder':'Email', 'style':'height: 50px;width: 84%;border: none;'}}) }}
                                    </div>
                                    <div class="form-group inputRoundedBlock" style="height: 50px;">
                                        <i class="la la-lock float-left" style="margin-left: 5%;margin-top: 13px;font-size: 20px;"></i>
                                        {{ form_widget(SignUpform.password, {'attr': {'class':'form-control', 'placeholder':'Password', 'style':'height: 50px;width: 84%;border: none;'}}) }}
                                    </div>
                                    <div style="margin-top: 3vh;">
                                        {{ form_widget(SignUpform.submitSignUp, {'attr': {'class':'btn btn-primary btn-block btn-lg', 'style':'text-align: center;font-family: Quicksand, sans-serif;background-color: rgb(0,0,0);margin-top: 5vh;height: 60px;font-size: 24px;font-weight: 500;border:none;border-radius:10px;'}}) }}
                                    </div>
                                    <div style="margin-top: 3vh;"><a class="btn btn-primary btn-block btn-lg d-block d-lg-none collapse-button changeToLogin"
                                        data-toggle="collapse" aria-expanded="false" aria-controls="collapse-1" role="button"
                                        href="#collapse-1" style="border: none;border-radius: 15px;background-color: rgba(255,255,255,0);">Login</a>
                                        <div class="collapse d-none" id="collapse-1"></div>
                                    </div>
 
                                {{ form_end(SignUpform) }}
                    </div>
            </div>
       
        </div>
            </div>
        </div>
        <div class="col-12 col-lg-6 col-xl-4 loginBlock" style="position: fixed;right: 0px;height: 100vh;background-color: #e17055;padding-top: 0;">
            <div class="loginContent">
                <div class="d-block d-lg-none" style="margin-top:2vh;text-align:center;padding-bottom: 30px;padding-top: 25px;color: rgb(255,255,255);"><img
                        src="../assets/img/logoFull.png" style="height: 80px;"></div>
                <div class="d-none d-lg-block" style="height: 27vh;"></div>
                <div style="height: 50vh;margin-top:3vh;">
                    <div class="row">
                        <div class="col">
                            <h2 style="font-family: Quicksand, sans-serif;text-align: center;color: rgb(255,255,255);font-weight: 500;">Login</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-sm-8 col-md-6 col-lg-10 col-xl-8 offset-sm-2 offset-md-3 offset-lg-1 offset-xl-2">
                                {% if loginError == true %}
                                    <p style="margin-top:15px;text-align:center;color:white;box-shadow: 0px 3px 15px rgba(0,0,0,.6);border-radius:20px;background-color:#ff7675;">Email or Password is incorrect!</p>
                                {% endif %}
                                {% if emailError == true %}
                                    <p style="margin-top:15px;text-align:center;color:white;box-shadow: 0px 3px 15px rgba(0,0,0,.6);border-radius:20px;background-color:#ff7675;">Email already registered!</p>
                                {% endif %}
                                {% if bannedError == true %}
                                    <p style="margin-top:15px;text-align:center;color:white;box-shadow: 0px 3px 15px rgba(0,0,0,.6);border-radius:20px;background-color:#ff7675;">This user is banned!</p>
                                {% endif %}
                            {{ form_start(loginform, {'attr': {'name':'CreateAccountForm'}}) }}
 
                                    <div class="form-group inputRoundedBlock" style="height: 50px;">
                                        <i class="la la-envelope float-left" style="margin-left: 5%;margin-top: 13px;font-size: 20px;"></i>
                                        {{ form_widget(loginform.email, {'attr': {'class':'form-control', 'placeholder':'Email', 'style':'width: 83%;border: none;font-family: Roboto, sans-serif;height: 50px;'}}) }}
                                    </div>
                                    <div class="form-group inputRoundedBlock" style="height: 50px;">
                                        <i class="la la-lock float-left" style="margin-left: 5%;margin-top: 13px;font-size: 20px;"></i>
                                        {{ form_widget(loginform.password, {'attr': {'class':'form-control', 'placeholder':'Password', 'style':'width: 83%;font-family: Roboto, sans-serif;border: none;height: 50px;'}}) }}
                                    </div>
                                    <div style="margin-top: 3vh;">
                                        {{ form_widget(loginform.submitLogin, {'attr': {'class':'btn btn-primary btn-block btn-lg', 'style':'text-align: center;font-family: Quicksand, sans-serif;background-color: rgb(0,0,0);margin-top: 5vh;height: 60px;font-size: 24px;font-weight: 500;border:none;border-radius:10px;'}}) }}
                                    </div>
                                    <div style="margin-top: 3vh;"><a class="btn btn-primary btn-block btn-lg d-block d-lg-none collapse-button createAccount"
                                        data-toggle="collapse" aria-expanded="false" aria-controls="collapse-1" role="button"
                                        href="#collapse-1" style="border: none;border-radius: 15px;background-color: rgba(255,255,255,0);">Create
                                        Account</a>
                                        <div class="collapse d-none" id="collapse-1"></div>
                                    </div>

                                {{ form_end(loginform) }}


                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="padding-top: 25px;padding-bottom: 25px;margin-top:30px;">
                <div class="col">
                    <p class="text-center text-white-50" style="margin: 0;font-family: Roboto, sans-serif;font-size: 12px;">Monkey See Monkey Do Â© 2018</p>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}

{% block footer %}
{% endblock %}

{% block javascripts %}
<script src="assets/js/collapse-handle-login.js"></script>
{% endblock %}