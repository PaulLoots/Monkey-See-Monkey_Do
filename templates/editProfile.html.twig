{% extends "base.html.twig" %}

{% block title %}Edit Profile{% endblock %}

{% block body %}

<div class="modal fade" role="dialog" tabindex="-1" id="uploadImageModal">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body" style="background-color: #1c1f21;padding: 25px;max-height:60vh;overflow:scroll;">
                <div class="row" style="height: 45px;">
                    <div class="col-8">
                        <h4 class="text-light" style="font-family: Roboto, sans-serif;">Select Image</h4>
                    </div>
                    <div class="col" style="margin-right: 10px;">
                    </div>
                </div>


                <div class="row">
                    {% for oldImage in oldImages %}
                    {% if oldImage.activeState == true %}


                    <div class="form-group" style="margin-bottom: 0px;padding:10px;">
                        <!--Profile Image Upload-->
                        <div class="customCodeProfileImage">
                            <label value="{{oldImage.id}}" class="filebutton selectImage activePP" style="background-image:url(../assets/profileImages/{{oldImage.imagePath}});background-size:cover;background-position:center;">
                                <i style="margin:35%;font-size:40px;color:white;" class="la la-check"></i>
                                <span>
                                    <div id="myfile">
                                    </div>
                                </span>
                            </label>
                        </div>
                    </div>
                    {% endif %}
                    {% endfor %}


                    {% for oldImage in oldImages %}


                    <div class="form-group" style="margin-bottom: 0px;padding:10px;">
                        <!--Profile Image Upload-->
                        <div class="customCodeProfileImage">
                            <label value="{{oldImage.id}}" class="filebutton selectImage" style="background-image:url(../assets/profileImages/{{oldImage.imagePath}});background-size:cover;background-position:center;">
                                <i style="margin:35%;font-size:40px;color:white;display:none;" class="la la-check"></i>
                                <span>
                                    <div id="myfile">
                                    </div>
                                </span>
                            </label>
                        </div>
                    </div>

                    {% endfor %}

                {# </div>
                <div class="row"> #}



                    {{ form_start(Uploadform, {'attr': {'novalidate': 'novalidate', 'id': 'Uploadform'}}) }}
                    {{ form_widget(Uploadform.profileId, {'attr': {'style':'display: none;'}}) }}

                    <div class="form-group" style="margin-bottom: 0px;padding:10px;text-align:center;">
                        <!--Profile Image Upload-->
                        <div class="customCodeProfileImage">
                            <label class="filebutton filebutton2" style="border:2px solid white;">
                                <i style="margin:35%;font-size:40px;color:white;" class="la la-user-plus"></i>
                                <span>
                                    <div id="myfile">
                                        {{ form_widget(Uploadform.image_path, {'attr':{'id':'imageUpload', 'onChange':'readURL(this)'}}) }}
                                    </div>
                                </span>
                            </label>
                        </div>
                    </div>

                    <div style="margin-top: 3vh;">
                        {{ form_widget(Uploadform.submit, {'attr': {'class':'btn btn-primary btn-block btn-lg',
                        'style':'text-align: center;font-family: Quicksand, sans-serif;background-color:
                        rgb(0,0,0);margin-top: 5vh;height: 60px;font-size: 24px;font-weight:
                        500;border:none;border-radius:10px;display:none;'}}) }}
                    </div>

                </div>
                {{ form_end(Uploadform) }}

            </div>
        </div>
    </div>
</div>

<div role="dialog" tabindex="-1">
    <div role="document">
        <div>

            <div style="background-color: #2d3436;margin-top:60px;">
                <div>
                    <div class="row">
                        <div class="col-4 col-sm-8 col-md-6 col-lg-4 col-xl-4 offset-sm-2 offset-md-3 offset-lg-4 offset-xl-4">
                            {% for oldImage in oldImages %}
                            {% if oldImage.activeState == true %}
                            <div class="form-group" style="margin-bottom: 0px;margin-left:30px;">
                                <!--Profile Image Upload-->
                                <div class="customCodeProfileImage">
                                    <div>
                                        <label class="filebutton" style="background-image:url(assets/profileImages/{{oldImage.imagePath}});background-size:cover;background-position:center;">
                                            <i style="margin-top:70%;font-size:24px;color:white;text-shadow:0 1px 10px rgba(0,0,0,.7);"
                                                class="la la-edit"></i>
                                            <span>
                                                <div id="myfile"></div>
                                            </span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                            {% endfor %}



                            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}


                            <div class="form-group inputRoundedBlock" style="height: 50px;">
                                <i class="la la-user float-left" style="margin-left: 5%;margin-top: 13px;font-size: 20px;"></i>
                                {{ form_widget(form.name, {'attr': {'class':'form-control', 'placeholder':'Name',
                                'style':'height: 50px;width: 84%;border: none;'}}) }}
                            </div>
                            <div class="form-group inputRoundedBlock" style="height: 50px;">
                                <i class="la la-envelope float-left" style="margin-left: 5%;margin-top: 13px;font-size: 20px;"></i>
                                {{ form_widget(form.email, {'attr': {'class':'form-control', 'placeholder':'Email',
                                'style':'height: 50px;width: 84%;border: none;'}}) }}
                            </div>
                            <div class="form-group inputRoundedBlock" style="height: 50px;">
                                <i class="la la-lock float-left" style="margin-left: 5%;margin-top: 13px;font-size: 20px;"></i>
                                {{ form_widget(form.password, {'attr': {'class':'form-control',
                                'placeholder':'Password', 'style':'height: 50px;width: 84%;border: none;'}}) }}
                            </div>
                            <div style="margin-top: 3vh;">
                                {{ form_widget(form.submitEditProfile, {'attr': {'class':'btn btn-primary btn-block
                                btn-lg', 'style':'text-align: center;font-family: Quicksand,
                                sans-serif;background-color: rgb(0,0,0);margin-top: 5vh;height: 60px;font-size:
                                24px;font-weight: 500;border:none;border-radius:10px;'}}) }}
                            </div>

                            {{ form_end(form) }}

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

{% endblock %}

{% block javascripts %}
<script src="../assets/js/AJAX_image.js"></script>
{% endblock %}